<% if !user_signed_in? %>
	<br/><br/>
	Welcome to the world of commercial videos.<br>
	<%= link_to('Register', new_user_registration_path)  %> / <%= link_to('login', new_user_session_path)  %> and upload your videos. We will convert them into shoppable/usable.

<% else %>
	Logged in. <br/>
	upload your video/photos to make it shoppable. <br/><br/>
	
	<%= form_for @video, html: { multipart: true } do |f| %>
	  <%= f.label :name %><br/>
	  <%= f.text_field :name %><br/>
	  <%= f.label :title %><br/>
	  <%= f.text_field :title %><br/><br/>
		
	  <%= f.label "Raw Video" %>
	  <%= f.file_field :rawvideo %><br/>
	  	
	  <%= f.label "Associated images" %> # notice 'multiple: true'<br/>
	  <%= f.file_field :pictures, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
	  
	  <br/><br/>	
	  <%= f.submit "Submit" %>
	<% end %>
<% end %>

